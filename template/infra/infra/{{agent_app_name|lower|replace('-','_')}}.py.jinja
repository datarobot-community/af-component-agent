EXCLUDE_PATTERNS = [
    re.compile(pattern)
    for pattern in [
        r"tests.*",
        r"\.coverage",
        r".*\.DS_Store",
        r".*\.pyc",
        r"\.ruff_cache.*",
        r"\.venv.*",
        r"\.mypy_cache.*",
        r"__pycache__.*",
        r"\.pytest_cache.*",
    ]
]


__all__ = [
