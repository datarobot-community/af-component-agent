{% if agent_template_framework == "nat" %}
[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "nat-components"
version = "0.1.0"
description = "A package using NVIDIA NAT components"
readme = "README.md"
requires-python = ">=3.11"
authors = [
    {name = "James Clemens", email = "james.clemens@datarobot.com"},
]
dependencies = [
    "nvidia-nat",
    "nvidia-nat-langchain",
    "nvidia-nat-opentelemetry",
    "datarobot",
]


[tool.setuptools.packages.find]
where = ["src"]

[tool.setuptools.package-dir]
"" = "src"

[project.entry-points.'nat.components']
nat_components = "nat_components.register"
{% endif %}