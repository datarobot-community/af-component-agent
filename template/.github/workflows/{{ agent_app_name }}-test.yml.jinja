---
name: Test {{ agent_app_name }}
on:
  push:
    branches: ["main"]
    paths:
      - '{{ agent_app_name }}/**'
  pull_request:
    branches: ["main"]
    paths:
      - '{{ agent_app_name }}/**'
concurrency:
  group: {% raw %}${{ github.workflow }}-${{ github.ref }}{% endraw %}
  cancel-in-progress: true
defaults:
  run:
    working-directory: {{ agent_app_name }}
jobs:
  docker-build-test:
    name: "Agent: {{ agent_app_name }} Docker build and test"
    runs-on: "ubuntu-latest"
    steps:
      - name: Checkout
        uses: "actions/checkout@v4"
      - name: Build Docker Image
        run: |
          cd docker_context
          tar -czh . | docker build - -t {{ agent_app_name }}
  tests:
    name: "Agent: {{ agent_app_name }} {% raw %}${{ matrix.python-version }}{% endraw %}"
    runs-on: "ubuntu-latest"
    strategy:
      matrix:
        python-version: ["3.10", "3.11", "3.12"]
    steps:
      - uses: "actions/checkout@v4"
      # Ref: https://docs.astral.sh/uv/guides/integration/github/#installation
      - name: Setup uv
        uses: astral-sh/setup-uv@v6
        with:
          enable-cache: true
          cache-dependency-glob: "uv.lock"
          python-version: {% raw %}${{ matrix.python-version }}{% endraw %}
      - name: Install Dependencies
        run: |
          uv sync --all-extras --dev
          uv pip install --no-cache-dir litellm>=1.72.1
          uv pip install -r ./custom_model/requirements.txt
      - name: Run Static Checks
        run: |
          uv run ruff format --check .
          uv run ruff check .
          uv run mypy --pretty .
      - name: Test
        run: uv run pytest --cov --cov-report=html --cov-report=term --cov-report xml:.coverage.xml
      - name: Get Cover
        uses: orgoro/coverage@v3.2
        with:
          coverageFile: {{ agent_app_name }}/.coverage.xml
          token: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
