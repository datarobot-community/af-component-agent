root:
  - env: {{agent_app_name|upper}}_PORT
    type: string
    default: "8842"
    help: "Enter the local port to access the agent. Should be a unique value."
  - env: DATAROBOT_DEFAULT_EXECUTION_ENVIRONMENT
    type: string
    default: "[DataRobot] Python 3.11 GenAI Agents"
    optional: true
    help: "Enter the default execution environment for the agent's custom model."
  - env: DATAROBOT_DEFAULT_EXECUTION_ENVIRONMENT_VERSION_ID
    type: string
    default: "69417fa8b1ce07076dca7611"
    optional: true
    help: "Enter the default execution environment version ID for the agent's custom model."
  - env: ENABLE_AGENT_HA_MODE
    type: boolean
    default: false
    optional: true
    help: >
      Enable High Availability mode for agent deployment to handle high concurrent requests (100+ users).
      
      When enabled: workers=5, replicas=2, max_computes=4.
      
      When disabled (default): workers=2, replicas=1, max_computes=2.
      
      NOTE: HA mode will lead to longer initialization time for newly created infrastructure.
