---
# https://taskfile.dev
version: '3'
env:
  ENV: testing
dotenv: ['.env', '.env.{{.ENV}}']
includes:
  # Source the agent Taskfile
  agent:
    taskfile: ./{{ agent_app_name }}/Taskfile.yml
    dir: ./{{ agent_app_name }}
  # Source the infra Taskfile as flat tasks and point at the infra directory
  pulumi:
    # REPLACE YOUR INFRASTRUCTURE TASKFILE WITH THE AGENT TASKFILE
    # cp ./{{ agent_app_name }}/Taskfile_infra.yml ./infra/Taskfile.yml
    taskfile: ./infra/Taskfile_infra.yml
    dir: ./infra
    flatten: true
task:
  default:
    desc: "ℹ️ Show all available tasks (run `task --list-all` to see hidden tasks)"
    cmds:
      - task --list
    silent: true
